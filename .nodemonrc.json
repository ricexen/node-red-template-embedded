{
  "ignoreRoot" : [".git", "test"], 
  "restartable": "rs",
  "ignore": [
    "node_modules/**/node_modules",
    "node_modules/**/test",
    "*.log"
  ],
  "verbose": true,
  "events": {
    "restart": "echo ------ restarted due to: $FILENAME ------"
  },
  "watch": [
    "src/",
    "nodes/",
    "node_modules/node-red-*"
  ],
  "ext": "js json htm html css"
}
